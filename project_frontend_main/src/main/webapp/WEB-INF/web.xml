<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/font-eot</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>application/font-ttf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <filter>
        <filter-name>pageFilterUser</filter-name>
        <filter-class>auth.pageFilterUser</filter-class>
    </filter>
    <filter>
        <filter-name>pageFilterAdmin</filter-name>
        <filter-class>auth.pageFilterAdmin</filter-class>
    </filter>
    
    <!--Admin Filtering-->
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/adminHome.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/addTour.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/allComplaints.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/bookingDetails.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/updatePlace.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/updateTour.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterAdmin</filter-name>
        <url-pattern>/home/updateVehicle.xhtml</url-pattern>
    </filter-mapping>
    
    <!--User Filtering-->
    <filter-mapping>
        <filter-name>pageFilterUser</filter-name>
        <url-pattern>/home/userHome.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterUser</filter-name>
        <url-pattern>/home/myCart.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterUser</filter-name>
        <url-pattern>/home/showUserTemplate.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterUser</filter-name>
        <url-pattern>/home/updatePerson.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageFilterUser</filter-name>
        <url-pattern>/home/viewHistory.xhtml</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>6LfCkBYkAAAAACz9EfOJ4Njh3oq-uAKYiyZw_M_d</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>6LfCkBYkAAAAACz9EfOJ4Njh3oq-uAKYiyZw_M_d</param-value>
    </context-param>
</web-app>
